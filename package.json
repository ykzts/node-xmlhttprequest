{
  "author": "Yamagishi Kazutoshi",
  "browser": "./browser.js",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {},
  "description": "Server-side XMLHttpRequest.",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "conventional-github-releaser": "^3.1.5",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "get-port": "^5.1.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "microbundle": "^0.12.3",
    "prettier": "^2.0.5",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.1.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "plugin:@typescript-eslint/recommended-requiring-type-checking",
          "prettier/@typescript-eslint"
        ],
        "files": [
          "**/*.ts"
        ],
        "parserOptions": {
          "project": "tsconfig.json"
        }
      },
      {
        "env": {
          "jest": true
        },
        "files": [
          "test/**/*.ts"
        ],
        "parserOptions": {
          "project": "test/tsconfig.json"
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    }
  },
  "files": [
    "dist",
    "browser.js"
  ],
  "homepage": "https://github.com/ykzts/node-xmlhttprequest",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/test/tsconfig.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/integration/**/*.ts"
    ]
  },
  "keywords": [
    "xmlhttprequest",
    "xhr",
    "w3c",
    "whatwg"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "name": "w3c-xmlhttprequest",
  "optionalDependencies": {},
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ykzts/node-xmlhttprequest.git"
  },
  "scripts": {
    "build": "microbundle --external http,https,perf_hooks --format cjs,es --strict --target node",
    "format": "prettier --write .",
    "lint": "eslint .",
    "release": "standard-version",
    "test": "jest"
  },
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "version": "3.0.0"
}
